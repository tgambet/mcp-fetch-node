{
  "name": "mcp-fetch-node",
  "version": "0.0.0-development",
  "description": "A Model Context Protocol server that provides web content fetching capabilities",
  "type": "module",
  "main": "dist/main.js",
  "bin": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "tsx watch --clear-screen=false src/main.ts",
    "build": "tsc",
    "postbuild": "chmod +x dist/main.js",
    "lint": "eslint src/**",
    "lint:fix": "eslint src/** --fix",
    "format": "prettier --write \"**/*.{ts,json,md,yml,js}\"",
    "format:check": "prettier --check .",
    "test": "node --import tsx --test tests/**/*.test.ts",
    "test:watch": "node --import tsx --test --watch tests/**/*.test.ts",
    "inspect": "pnpx @modelcontextprotocol/inspector",
    "fix": "pnpm format && pnpm lint:fix"
  },
  "author": "Thomas Gambet",
  "repository": {
    "type": "git",
    "url": "https://github.com/tgambet/mcp-fetch-node.git"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "fetch"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "express": "^5.0.1",
    "linkedom": "^0.18.9",
    "lru.min": "^1.1.1",
    "robots-parser": "^3.0.1",
    "sanitize-html": "^2.14.0",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@codedependant/semantic-release-docker": "^5.1.0",
    "@eslint/js": "^9.20.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.4",
    "@types/sanitize-html": "^2.13.0",
    "@types/turndown": "^5.0.5",
    "eslint": "^9.20.1",
    "prettier": "^3.5.1",
    "semantic-release": "^24.2.3",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "overrides": {
    "esbuild": ">=0.25.0"
  },
  "packageManager": "pnpm@10.4.1+sha512.c753b6c3ad7afa13af388fa6d808035a008e30ea9993f58c6663e2bc5ff21679aa834db094987129aa4d488b86df57f7b634981b2f827cdcacc698cc0cfb88af"
}
